<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="assignment3_li_xin"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.assignment3_li_xin"
        tools:targetApi="31">

        <!-- Register Activity Declaration -->
        <activity
            android:name=".view.Register"
            android:exported="false" />

        <!-- Login Activity Declaration (New Entry Point) -->
        <activity
            android:name=".view.Login"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- MovieSearchActivity Declaration -->
        <activity
            android:name=".view.MovieSearchActivity"
            android:exported="true" />

        <!-- My Favorite Activity Declaration -->
        <activity
            android:name=".view.MyFavoriteActivity"
            android:exported="true" />

        <!-- Movie Details Activity Declaration -->
        <activity
            android:name=".view.MovieDetailsActivity"
            android:exported="false" />

        <!-- Favorite Details Activity Declaration -->
        <activity
            android:name=".view.FavoriteDetailsActivity"
            android:exported="true" />

    </application>
</manifest>


